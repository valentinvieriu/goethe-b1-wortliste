{
  "name": "goethe-b1-wortliste",
  "version": "2.0.0",
  "description": "Node.js refactor of Goethe B1 Wortliste extraction project",
  "main": "src/index.js",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "start": "node src/index.js",
    "process:all": "node src/index.js --all",
    "process:page": "node src/index.js --page",
    "test": "node --test test/*.test.js",
    "clean": "rm -rf output/",
    "lint": "eslint src/ test/",
    "lint:fix": "eslint src/ test/ --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "dependencies": {
    "sharp": "^0.33.2",
    "mupdf": "^1.1.0"
  },
  "devDependencies": {
    "eslint": "^9.28.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3"
  },
  "keywords": [
    "german",
    "vocabulary",
    "goethe",
    "pdf",
    "extraction"
  ],
  "author": "",
  "license": "MIT",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
